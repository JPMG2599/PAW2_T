@model PAW.Models.Product
<h2>Edit product</h2>

<form asp-action="Edit" method="post">
    <input asp-for="ProductId" type="hidden" />
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <input asp-for="SupplierId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="InventoryId" class="form-label"></label>
        <input asp-for="InventoryId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
